@model IEnumerable<QuanLyThuChi.Models.MucChi>

@{
    ViewBag.Title = "Danh Sách Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Danh Sách Mục Chi Tiêu Của Bạn</h2>

<h3>
    @Html.ActionLink("Thêm mục mới", "ThemMuc")
</h3>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaMuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenMuc)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.MaMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenMuc)
        </td>
        <td>
            @Html.ActionLink("Chỉnh sửa", "ChinhSua", new { @MaMuc=item.MaMuc }) |
            @Html.ActionLink("Xóa", "XoaMuc", new { @MaMuc = item.MaMuc })
        </td>
    </tr>
}

</table>
