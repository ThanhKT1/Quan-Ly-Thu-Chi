@model QuanLyThuChi.Models.MucChi

@{
    ViewBag.Title = "Thêm Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Thêm Mục Mới</h2>
<div style="color:green">@ViewBag.ThongBao</div>
@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @*BỎ ID LÀ BỎ LUÔN KHÔNG HIDDEN GÌ HẾT*@
        <div class="form-group">
            @Html.LabelFor(model => model.TenMuc, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenMuc, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenMuc, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Tạo mục" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay về", "ListMuc")
</div>
