@model IEnumerable<QuanLyThuChi.Models.ThuChiii>

@{
    ViewBag.Title = "Thu/Chi Theo Mục";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 style="text-align:center">Thu/Chi Theo Mục</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LyDo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenMuc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoTien)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ThuChi)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.LyDo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenMuc)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThuChi)
        </td>
 
    </tr>
}

</table>
